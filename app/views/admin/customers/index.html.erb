<div class="container">
  <h2>会員情報</h2>

  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
            <td>
              <%= link_to customer.last_name + customer.first_name, admin_customer_path(customer.id) %>
            </td>
            <td><%= customer.email %></td>
            <% if customer.is_active? %>
              <td class="text-success fw-bold">有効</td>
            <% else %>
              <td class="text-muted fw-bold">退会</td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>