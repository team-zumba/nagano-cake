<div class="container mt-3">
  <div class="row">
    <h2 class="bg-light py-1 px-4 h4">会員一覧</h2>
  </div>

  <div class="row">
    <table class="table">
      <thead class="bg-light">
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
            <td>
              <%= link_to customer.last_name + customer.first_name, admin_customer_path(customer.id) %>
            </td>
            <td><%= customer.email %></td>
            <% if customer.is_active? %>
              <td class="text-success font-weight-bold">有効</td>
            <% else %>
              <td class="text-muted font-weight-bold">退会</td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="row justify-content-center">
    <%= paginate @customers %>
  </div>
</div>