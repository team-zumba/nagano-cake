<div class="container mt-3">
  <div class="row">
    <h2 class="bg-light py-1 px-4 h4">
      <%= @customer.last_name + @customer.first_name %>さんの会員詳細
    </h2>
  </div>

  <div class="row">
    <div class="col-12 col-lg-10">
      <div class="row my-4 border-bottom border-secondary">
        <div class="col-3">会員ID</div>
        <div class="col-8"><%= @customer.id %></div>
      </div>
      <div class="row my-4 border-bottom border-secondary">
        <div class="col-3">氏名</div>
        <div class="col-8"><%= @customer.last_name + '　' + @customer.first_name %></div>
      </div>
      <div class="row my-4 border-bottom border-secondary">
        <div class="col-3">フリガナ</div>
        <div class="col-8"><%= @customer.last_name_kana + '　' + @customer.first_name_kana %></div>
      </div>
      <div class="row my-4 border-bottom border-secondary">
        <div class="col-3">郵便番号</div>
        <div class="col-8"><%= @customer.postal_code %></div>
      </div>
      <div class="row my-4 border-bottom border-secondary">
        <div class="col-3">住所</div>
        <div class="col-8"><%= @customer.address %></div>
      </div>
      <div class="row my-4 border-bottom border-secondary">
        <div class="col-3">電話番号</div>
        <div class="col-8"><%= @customer.telephone_number %></div>
      </div>
      <div class="row my-4 border-bottom border-secondary">
        <div class="col-3">メールアドレス</div>
        <div class="col-8"><%= @customer.email %></div>
      </div>
      <div class="row my-4 border-bottom border-secondary">
        <div class="col-3">会員ステータス</div>
        <% if @customer.is_active? %>
          <div class="col-8 text-success font-weight-bold">有効</div>
        <% else %>
          <div class="col-8 text-muted font-weight-bold">退会</div>
        <% end %>
      </div>
      <div class="row">
        <div class="col-3"></div>
        <div class="col-5">
          <div class="row justify-content-between px-3">
            <%= link_to '編集する', edit_admin_customer_path(@customer.id), class: 'btn btn-success' %>
            <%= link_to '注文履歴一覧を見る', admin_root_path, class: 'btn btn-primary' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>