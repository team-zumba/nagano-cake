<div class="container">
    <div class="row mt-3">
        <div class="col-md-3 bg-light">
            <%= @customer.last_name + @customer.first_name %>さんの注文履歴
        </div>
    </div>
    
    <div class="row bg-light border-top border-bottom mt-3">
        <div class="col-md-4">購入日時</div>
        <div class="col-md-4">注文個数</div>
        <div class="col-md-4">注文ステータス</div>
    </div>
    <% @orders.each do |order| %>
    <div class="row border-bottom py-2">
        <div class="col-md-4"><%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %></div>
        <div class="col-md-4">
            <% @total_amount = 0 %>
            <% order.order_details.each do |order_detail| %>
                <% @total_amount += order_detail.amount %>
            <% end %>
            <%= @total_amount %>
        </div>
        <div class="col-md-4">
            <%= order.status_i18n %>
        </div>
        
    </div>
    <% end %>
    <div class="row justify-content-center mt-2">
        <%= paginate @orders %>
    </div>
</div>