<div class="container">
  <div class="row">
    <h2>管理者ログイン</h2>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row justify-content-center">
      <div class="col-12 col-md-6">
        <div class="field form-group row justify-content-between">
          <label>メールアドレス</label><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control col-8' %>
        </div>
      </div>
    </div>

    <div class="row justify-content-center">
      <div class="col-12 col-md-6">
        <div class="field form-group row justify-content-between">
          <label>パスワード</label><br />
          <%= f.password_field :password, autocomplete: "current-password", class: 'form-control col-8' %>
        </div>
      </div>
    </div>

    <div class="actions row justify-content-center">
      <%= f.submit "ログイン", class: 'btn btn-primary px-5' %>
    </div>
  <% end %>

  <%= render "admin/shared/links" %>
</div>