<div class="container">
    
    <div class="row py-4">
        <div class="col-md-1"></div>
        <div class="col-md-1 bg-light text-center px-0">商品詳細</div>
    </div>
    
    <div class="row py-3">
        <div class="col-md-3">
            <%= image_tag @item.image, size: "200x150" %>
        </div>
            
        <div class="col-md-8">
            <div class="row">
                <div class="col-md-3">商品名</div>
                <div class="col-md-6"><%= @item.name %></div>
            </div>
            
            <div class="row">
                <div class="col-md-3">商品説明</div>
                <div class="col-md-6"><%= @item.introduction %></div>
            </div>
            
            <div class="row">
                <div class="col-md-3">ジャンル</div>
                <div class="col-md-6"><%= @item.genre.name %></div>
            </div>
            
            <div class="row">
                <div class="col-md-3">
                    <p>
                    税込価格</br>
                    (税抜価格)
                    </p>
                </div>
                <div class="col-md-6">
                    <%= @item.item_price.round(0) %> （<%=  @item.price %>）円
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-3">販売ステータス</div>
                <div class="col-md-6">
                    <% if @item.is_active == true %>
                    <p class="text-success">販売中</p>
                    <% else %>
                    <p>販売停止中</p>
                    <% end %>
                </div>
            </div>
            <div class="row py-3">
                <div class="col-md-2"></div>
                <div class="col-md-3">
                    <%= link_to '編集する', edit_admin_item_path, class:"btn btn-success btn-md btn-block" %>
                </div>
            </div>
        </div>
    </div>
</div>