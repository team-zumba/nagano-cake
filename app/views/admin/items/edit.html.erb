<div class="container">
    
    <div class="row py-4">
        <div class="col-md-2 bg-light text-center px-0">商品編集</div>
    </div>
    
    <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-8">
    <%= form_with model:@item, url:admin_item_path, method: :patch do |f| %>
        <div class="row mb-3">
            <div class="col-md-3">商品画像</div>
            <div class="col-md-6"><%= f.file_field :image, accept: "image/*" %></div>
        </div>
        
        <div class="row mb-3">
            <div class="col-md-3">商品名</div>
            <div class="col-md-6"><%= f.text_field :name %></div>
        </div>
        
        <div class="row mb-3">
            <div class="col-md-3">商品説明</div>
            <div class="col-md-6"><%= f.text_area :introduction, style:"height:100px", rows:"5" %></div>
        </div>
        
        <div class="row mb-3">
            <div class="col-md-3">ジャンル</div>
            <div class="col-md-6">
            <%= f.select :genre_id, @select_array, include_blank: "--選択してください--" %>
            </div>
        </div>
        
        <div class="row mb-3">
            <div class="col-md-3">税抜価格</div>
            <div class="col-md-6"><%= f.number_field :price, placeholder: "1000", class:"no-spin" %>円</div>
        </div>
        
        <div class="row mb-3">
            <div class="col-md-3">販売ステータス</div>
            <%= f.radio_button :is_active, "true" %>
            <%= f.label :is_active, "販売中" %>　　　
            <%= f.radio_button :is_active, "false" %>
            <%= f.label :is_active, "販売停止中" %>
        </div>
        <div class="row mb-3 justify-content-center">
            <div class="col-md-4"><%= f.submit '変更を保存', class:"btn btn-success" %></div>
        </div>
    <% end %>
    </div>
    </div>

</div>