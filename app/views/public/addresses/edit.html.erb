<div class="container mt-5">
<h3>配送先編集</h3>
<%= form_with model: @address, url: address_path do |f| %>
<div class="row mt-5">
  <div class="col-10">
    <%= f.label :郵便番号（ハイフンなし）,class:"col-3"%>
    <%= f.text_field :postal_code,class:"col-4" %>
  </div>
</div>
<div class="row">
  <div class="col-10">
    <%= f.label :住所,class:"col-3" %>
    <%= f.text_field :address,class:"col-7" %>
  </div>
</div>
<div class="row">
  <div class="col-10">
    <%= f.label :宛名,class:"col-3" %>
    <%= f.text_field :name,class:"col-4" %>
  </div>
    <%= f.submit "変更内容を保存", class: "btn btn-success" %>
</div>
</div>
  
<% end %>