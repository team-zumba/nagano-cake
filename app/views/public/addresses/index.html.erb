<div class="container mt-5">
<h3>配送先登録/一覧</h3>

<%= form_for @address, url:addresses_path(@address) do |f| %>
<div class="row mt-3">
  <div>
  <%= f.label :郵便番号 ,class:"col-3"%>
  <%= f.text_field :postal_code %>
  </div>
</div>
<div class="row">
  <div>
  <%= f.label :住所 ,class:"col-3"%>
  <%= f.text_area :address %>
  </div>
</div>
<div class="row">
  <div>
  <%= f.label :宛名 ,class:"col-3"%>
  <%= f.text_field :name %>
  </div>
  <%= f.submit "新規登録" %>
</div>

<% end %>

<table>
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
    </tr>
  </tbody>
</table>
</div>