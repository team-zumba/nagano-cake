<div class="container">
    <div class="row">
        <div class="bg-light col-md-2">
        マイページ
        </div>
    </div>
    <div class="row">
        <div>
        登録情報
        <%= link_to "編集する", edit_public_customer_path(@customer.id), class:"btn btn-success" %>
        </div>
    </div>
    <div class="row">
        <div class="col-md-7">
            <table class="border">
                <tr>
                    <th class="border bg-light">氏名</th>
                    <td class="border"> <%= @customer.last_name %>　<%= @customer.first_name %></td>
                </tr>
                <tr>
                    <th class="border bg-light">カナ</th>
                    <td class="border"><%= @customer.last_name_kana %>　<%=@customer.first_name_kana %></td>
                </tr>
                <tr>
                    <th class="border bg-light">郵便番号</th>
                    <td class="border"><%= @customer.postal_code %></td>
                </tr>
                <tr>
                    <th class="border bg-light">住所</th>
                    <td class="border"><%= @customer.address %></td>
                </tr>
                <tr>
                    <th class="border bg-light">電話番号</th>
                    <td class="border"><%= @customer.telephone_number %></td>
                </tr>
                <tr>
                    <th class="pr-3 border bg-light">メールアドレス</th>
                    <td class="border"><%= @customer.email %></td>
                </tr>
            </table>
        </div>
    </div>
    <div class="row">
        <div>
            <div>配送先</div>
            <%= link_to "一覧を見る", public_addresses_path(@addresses), class:"btn btn-primary" %>
        </div>
    </div>
    <div class="row">
        <div>
            <div>注文履歴</div>
            <%= link_to "一覧を見る", public_orders_path(@orders), class:"btn btn-primary" %>
        </div>
    </div>
    
    
</div>