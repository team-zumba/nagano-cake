<div class="container">

    <div class="row pl-4">
        <p class="bg-light col-md-2 my-5 mx-4 text-center">
        <strong>会員情報編集</strong>
        </p>
    </div>
    
    <%= form_with model: @customer, url:edit_customer_path(@customer.id), method: :patch do |f| %>
        <div class="row">
            <div class="col-md-2">氏名</div>
            <div class="form-group col-md-3"><%= f.text_field :last_name %></div>
            <div class="form-group col-md-3"><%= f.text_field :first_name %></div>
        </div>    
        
        <div class="row">
            <div class="col-md-2">フリガナ</div>
            <div class="form-group col-md-3"><%= f.text_field :last_name_kana %></div>
            <div class="form-group col-md-3"><%= f.text_field :first_name_kana %></div>
        </div> 
        
        <div class="row">
            <div class="col-md-2">郵便番号</div>
            <div class="form-group col-md-3"><%= f.text_field :postal_code %></div>
        </div>
        
        <div class="row">
            <div class="col-md-2">住所</div>
            <div class="form-group col-md-7"><%= f.text_field :address, size:70 %></div>
        </div>
        
        <div class="row">
            <div class="col-md-2">電話番号</div>
            <div class="form-group col-md-3"><%= f.text_field :telephone_number %></div>
        </div>
        
        <div class="row">
            <div class="col-md-2">メールアドレス</div>
            <div class="form-group col-md-3"><%= f.text_field :email %></div>
        </div>

        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-4"><%= f.submit '編集内容を保存', class: 'btn btn-success' %></div>
            <div class="col-md-2 pl-8"><%= link_to '退会する', customers_check_path, class: 'btn btn-danger' %></div>
        </div>
        
    <% end %>

</div>
