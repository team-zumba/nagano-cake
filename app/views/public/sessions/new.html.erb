<div class="container mt-5">
<div class="row mt-3 mb-3">  
<h2>ログイン</h2>
</div>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="row mt-3 mb-3">
 <h4>会員の方はこちらからログイン</h4>
</div>
  <div class="field row">
    <%= f.label :メールアドレス,class:"col-lg-3 " %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"col-lg-3 mb-2" %>
  </div>

  <div class="field row">
    <%= f.label :パスワード,class:"col-lg-3 " %>
    <%= f.password_field :password, autocomplete: "current-password",class:"col-lg-3 mb-2" %>
  </div>

  <% if devise_mapping.rememberable? %>
  
  <% end %>

  <div class="actions row">
    <div class="col-lg-3 "></div>
    <%= f.submit "ログイン",class: "btn btn-sm btn-primary px-5 mb-2 " %>
  </div>
<% end %>
  <div class>
  会員済みでない方は<%= render "public/shared/links" %>
  </div>  

</div>