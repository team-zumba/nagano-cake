<div class="container mt-5">
<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  

  <div class="field row">
    <%= f.label :名前,class:"col-lg-3" %>
    <%= f.label :"(姓)",class:"col-lg-1" %>
    <%= f.text_field :last_name, autofocus: true ,class:"col-lg-3"%>
    <%= f.label :"(名)" ,class:"col-lg-1"%>
    <%= f.text_field :first_name, autofocus: true ,class:"col-lg-3"%>
  </div>
 

  <div class="field row">
    <%= f.label :フリガナ,class:"col-lg-3" %>
    <%= f.label :"(セイ)",class:"col-lg-1" %>
    <%= f.text_field :last_name_kana, autofocus: true ,class:"col-lg-3"%>
    <%= f.label :"(メイ)",class:"col-lg-1" %>
    <%= f.text_field :first_name_kana, autofocus: true,class:"col-lg-3" %>
  </div>


  <div class="field row">
    <%= f.label :メールアドレス,class:"col-lg-3" %>
    <div class="col-lg-1" ></div>
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"col-lg-3 " %> 
  </div>


  <div class="field row">
    <%= f.label :"郵便番号（ハイフンなし）" ,class:"col-lg-3"%>
    <div class="col-lg-1" ></div>
    <%= f.text_field :postal_code, autofocus: true,class:"col-lg-3 " %>
  </div>


  <div class="field row">
    <%= f.label :住所,class:"col-lg-3 " %>
    <div class="col-lg-1" ></div>
    <%= f.text_field :address, autofocus: true,class:"col-lg-3" %>
  </div>


  <div class="field row">
    <%= f.label :"電話番号（ハイフンなし）",class:"col-lg-3"  %>
    <div class="col-lg-1" ></div>
    <%= f.text_field :telephone_number, autofocus: true,class:"col-lg-3"%>
  </div>


  <div class="field row">
    <%= f.label :"パスワード(6文字以上)",class:"col-lg-3" %>
    <div class="col-lg-1" ></div>
    <%= f.password_field :password, autocomplete: "off" ,class:"col-lg-3" %>
  </div>


  <div class="field row">
    <%= f.label :"パスワード(確認用)" ,class:"col-lg-3" %>
    <div class="col-lg-1" ></div>
    <%= f.password_field :password_confirmation, autocomplete: "off" ,class:"col-lg-3 " %>
  </div>

  <div class="actions row">
    <%= f.submit "新規登録",class: "btn btn-sm btn-primary px-5 " %>
  </div>  
<% end %>

　<div class>
　　既に登録済みの方は<%= render "public/shared/links" %>
　</div>
</div>
  