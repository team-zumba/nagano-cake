<div class="row justify-content-end">
  <% if type == 'items' %>
    <%= form_with url: search_items_path, method: :get do |f| %>
      <div class="row align-items-center">
        <div class="col-8 pr-0">
          <%= f.text_field :word, class: 'form-control', placeholder: '商品を検索' %>
        </div>
        <div class="col-4 pl-0">
          <%= f.submit '検索', class: 'btn btn-primary btn-sm' %>
        </div>
      </div>
    <% end %>
  <% elsif type == 'customers' %>
    <%= form_with url: search_admin_customers_path, method: :get do |f| %>
      <div class="row align-items-center">
        <div class="col-8 pr-0">
          <%= f.text_field :word, class: 'form-control', placeholder: 'ユーザーを検索' %>
        </div>
        <div class="col-4 pl-0">
          <%= f.submit '検索', class: 'btn btn-primary btn-sm' %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>